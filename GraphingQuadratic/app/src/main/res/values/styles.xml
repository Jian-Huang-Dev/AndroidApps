<resources>

    <dimen name="logo_width">150dp</dimen>
    <dimen name="logo_height">150dp</dimen>
    <dimen name="logo_text_size">50sp</dimen>
    <dimen name="about_text_size">16sp</dimen>
    <!-- Drawer -->
    <dimen name="drawer_text_size">16sp</dimen>
    <dimen name="drawer_title_size">26sp</dimen>
    <dimen name="drawer_padding">5dp</dimen>
    <dimen name="drawer_width">240dp</dimen>
    
    <style name="button_setting_rate_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:drawableLeft">@drawable/icon_rate</item>
        <item name="android:drawableRight">@drawable/icon_rate</item>
        <item name="android:textColor">@color/DarkBlue</item>
        <item name="android:text">@string/drawer_rate</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
    
     <!-- common style -->
    <style name="screen_background">
        <item name="android:background">@drawable/screen_background</item>
    </style>
    
    
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

</resources>
